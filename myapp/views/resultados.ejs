<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>

<%- include('partials/header') %>

<body>
	<!-- Header -->
	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			

		<div class="container products-wrapper">
		<div class="row">
			<% if (resultados.length < 1){ %>
				<p class="pRafa">No se encontraron resultados</p>
				<% } %>
					<% if (resultados.length >= 1){ %>
				<% for(let i = 0; i < resultados.length; i++) { %>
			  <div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					
				  <a href="/products/<%= resultados[i].id %>">
					<figure class="product-box_image">
					  <img src="<%= resultados[i].img %>" alt="<%= resultados[i].nombre %>">
					</figure>
					<article class="product-box_data">
					  <h2><%= resultados[i].nombre %></h2>
					  <p><%= resultados[i].users_id %></p>
					  <p><%= resultados[i].descripcion %></p>
					</article>
				  </a>
				</section>
			  </div>
			<% } %>
				<% } %>
		
		</div>
	</div>

	<!-- footer -->
	
	<!-- /footer -->
	<%- include('partials/footer') %>

</body>

</html>