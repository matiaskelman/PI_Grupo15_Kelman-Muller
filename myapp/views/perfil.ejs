<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<%- include('partials/header') %>

<body>
<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
			
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-titleProfile"><%= usuario.email %>
						<a href="/users/profile/<%= usuario.id %>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li style="color: white;">
								<%= usuario.email %>
							</li>
						<li style="color: white;"><%= usuario.Product.length %> productos</li>
						<li style="color: white;">200 seguidores</li>
					</ul>
					
				</div>
				
			</div>
		</div>
		 <div class="container products-wrapper">
		<div class="row">
				<% for(let i = 0; i <  usuario.Product.length; i++) { %>
			  <div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					
				  <a href="/products/<%=  usuario.Product[i].id %>">
					<figure class="product-box_image">
					  <img src="<%=  usuario.Product[i].archivoImg %>" alt="<%=  usuario.Product[i].nombre %>">
					</figure>
					<article class="product-box_data">
					  <h2><%=  usuario.Product[i].nombre %></h2>
					  <p><%=  usuario.Product[i].descripcion %></p>
					</article>
				  </a>
				</section>
			  </div>
			<% } %>
		
		</div>
	</div>
	</section>
	<!-- /Datos del usuario -->
	 <%- include('partials/footer') %>
</body>	
</html>